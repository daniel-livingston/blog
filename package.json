{
	"name": "blog",
	"version": "1.0.0",
	"description": "A blog website",
	"scripts": {
		"build": "tsc && npm run webpack",
		"dev": "concurrently \"tsc --watch\" \"npm run dev:build\" \"npm run dev:start\"",
		"dev:build": "webpack --config=webpack.development.config.js --watch",
		"dev:start": "env-cmd -f ./config/dev.env nodemon build/server/index",
		"start": "node build/server/index",
		"test": "env-cmd -f ./config/test.env jest",
		"test:watch": "env-cmd -f ./config/test.env jest --watch",
		"webpack": "webpack --config=webpack.production.config.js"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"passport": "^0.4.1",
		"password-validator": "^5.1.1",
		"pg": "^8.5.1",
		"uuid": "^8.3.1",
		"validator": "^13.1.17"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-react": "^7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@types/bcrypt": "^3.0.0",
		"@types/body-parser": "^1.19.0",
		"@types/express": "^4.17.9",
		"@types/jest": "^26.0.15",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.10",
		"@types/passport": "^1.0.4",
		"@types/pg": "^7.14.7",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-test-renderer": "^17.0.0",
		"@types/uuid": "^8.3.0",
		"@types/validator": "^13.1.0",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"concurrently": "^5.3.0",
		"css-loader": "^5.0.1",
		"env-cmd": "^10.1.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.3.1",
		"nodemon": "^2.0.6",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-test-renderer": "^17.0.1",
		"sass": "^1.29.0",
		"sass-loader": "^10.1.0",
		"typescript": "^4.1.2",
		"webpack": "^5.8.0",
		"webpack-cli": "^4.2.0"
	}
}
